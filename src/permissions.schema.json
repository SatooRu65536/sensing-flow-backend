{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "plan": {
      "type": "string",
      "enum": [
        "guest",
        "trial",
        "basic",
        "pro"
      ]
    },
    "permissionName": {
      "type": "string",
      "pattern": ".+:.*"
    },
    "permission": {
      "type": "object",
      "properties": {
        "resource": {
          "type": "string"
        },
        "action": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "resource",
        "action",
        "description"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "plans": {
      "type": "object",
      "propertyNames": {
        "$ref": "#/definitions/plan"
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/permissionName"
        }
      }
    },
    "permissions": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "plans",
    "permissions"
  ],
  "additionalProperties": false
}
