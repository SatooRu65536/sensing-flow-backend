{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "plans": {
      "type": "object",
      "propertyNames": {
        "enum": [
          "guest",
          "trial",
          "basic",
          "pro",
          "admin"
        ]
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "permissions": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "read:health",
                "list:sensor_upload",
                "post:sensor_upload",
                "abort:sensor_upload",
                "list:sensor_data",
                "*"
              ]
            }
          },
          "selectable": {
            "type": "boolean"
          }
        },
        "required": [
          "selectable",
          "permissions"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "plans"
  ],
  "additionalProperties": false
}